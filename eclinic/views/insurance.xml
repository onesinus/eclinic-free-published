<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Define the action -->
    <record id="action_insurance_tree" model="ir.actions.act_window">
      <field name="name">Insurances</field>
      <field name="res_model">eclinic.insurance</field>
      <field name="view_mode">tree,form</field>
      <field name="domain"/>
      <field name="context"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click here to add a new insurance.
        </p>
      </field>
    </record>

    <record model="ir.ui.view" id="insurance_tree_view">
        <field name="name">eclinic.insurance.tree</field>
        <field name="model">eclinic.insurance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="contact"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="insurance_form_view">
        <field name="name">eclinic.insurance.form</field>
        <field name="model">eclinic.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="contact"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Policies">
                            <field name="policies">
                                <tree editable="bottom">
                                    <field name="number"/>
                                    <field name="description"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="holder"/>
                                    <field name="coverage_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define the menuitem that points to the action -->
    <menuitem id="menu_insurance_tree" name="Insurances" parent="clinic_parent_menu"
              action="action_insurance_tree" sequence="40"/>

  </data>
</odoo>
